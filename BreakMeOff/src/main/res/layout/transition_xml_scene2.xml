<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/transition_xml_btn"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="@string/transition_xml_button" />

    <TextView
        android:id="@+id/transition_scene_long_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/transition_xml_btn"
        android:layout_marginTop="20dp"
        android:text="@string/transition_xml_long_text" />

    <ImageView
        android:id="@+id/transition_xml_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:src="@android:drawable/ic_menu_info_details" />

</RelativeLayout>