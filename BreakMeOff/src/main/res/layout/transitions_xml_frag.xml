<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/transition_radio_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scene 1" />

        <RadioButton
            android:id="@+id/transition_radio_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scene 2" />

        <RadioButton
            android:id="@+id/transition_radio_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scene 3" />

    </RadioGroup>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/transitions_xml_scene_root">

        <include layout="@layout/transition_xml_scene1"/>

    </LinearLayout>


</LinearLayout>